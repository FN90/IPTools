<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/process_bar_normal"
                android:endColor="@color/process_bar_normal"
                android:startColor="@color/process_bar_normal" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/process_bar_run"
                    android:startColor="@color/process_bar_run" />
            </shape>
        </clip>
    </item>
</layer-list>